{
  "extends": ["alloy"],
  "env": {
    "es6": true,
    "browser": true,
    "greasemonkey": true
  },
  "globals": {
    "Req": true,
    "Req115": true,
    "ReqSprite": true,
    "ReqTrailer": true,
    "Util": true,
    "UtilMagnet": true
  },
  "rules": {
    "no-unused-vars": ["error", { "varsIgnorePattern": "^Req|Util" }],
    "no-param-reassign": "off",
    "no-template-curly-in-string": "off"
  },
  "ignorePatterns": ["**/*.md"]
}
