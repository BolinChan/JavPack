{
  "extends": ["alloy"],
  "env": {
    "unsafeWindow": true,
    "GM_addElement": true,
    "GM_addStyle": true,
    "GM_download": true,
    "GM_getResourceText": true,
    "GM_getResourceURL": true,
    "GM_info": true,
    "GM_log": true,
    "GM_notification": true,
    "GM_openInTab": true,
    "GM_registerMenuCommand": true,
    "GM_unregisterMenuCommand": true,
    "GM_setClipboard": true,
    "GM_getTab": true,
    "GM_saveTab": true,
    "GM_getTabs": true,
    "GM_setValue": true,
    "GM_getValue": true,
    "GM_deleteValue": true,
    "GM_listValues": true,
    "GM_addValueChangeListener": true,
    "GM_removeValueChangeListener": true,
    "GM_xmlhttpRequest": true,
    "GM_webRequest": true,
    "GM_cookie": true
  },
  "globals": {
    "Util": true,
    "Req": true,
    "Req115": true,
    "Util115": true
  },
  "rules": {
    "no-template-curly-in-string": "off",
    "no-param-reassign": "off",
    "no-unused-vars": "warn",
    "complexity": "off",
    "eqeqeq": "off",
    "max-nested-callbacks": "warn"
  },
  "ignorePatterns": ["**/*.md"]
}
